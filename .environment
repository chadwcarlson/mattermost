
export MM_SERVICESETTINGS_LISTENADDRESS=":$PORT"

export MM_SQLSETTINGS_DRIVERNAME="postgres"

DATABASE_REL=database
DBUSERNAME=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].username | echo $(read s; echo ${s//\"} ))
DB_PASSWORD=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].password | echo $(read s; echo ${s//\"} ))
DB_PATH=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].path | echo $(read s; echo ${s//\"} ))
DB_HOST=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].host | echo $(read s; echo ${s//\"} ))
DB_PORT=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].port | echo $(read s; echo ${s//\"} ))


export MM_SQLSETTINGS_DATASOURCE="postgres://$DBUSERNAME:main@database.internal:5432/main?sslmode=disable&connect_timeout=10"
export MM_ELASTICSEARCHSETTINGS_CONNECTIONURL="http://search.internal:9200"
export MM_ELASTICSEARCHSETTINGS_USERNAME=""
export MM_ELASTICSEARCHSETTINGS_PASSWORD=""
export MM_LOGSETTINGS_ENABLEFILE=false
export MM_LOGSETTINGS_FILELOCATION="./logs/"
export MM_NOTIFICATIONLOGSETTINGS_ENABLEFILE=false
export MM_NOTIFICATIONLOGSETTINGS_FILELOCATION="./logs/"
