DATABASE_REL=database
SEARCH_REL="search"

export MM_SERVICESETTINGS_LISTENADDRESS=":$PORT"

export MM_SQLSETTINGS_DRIVERNAME="postgres"

DB_USERNAME=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].username )
DB_PASSWORD=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].password )
DB_PATH=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].path )
DB_HOST=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].host )
DB_PORT=$( echo "$PLATFORM_RELATIONSHIPS" | base64 --decode | jq .$DATABASE_REL[0].port )

export MM_SQLSETTINGS_DATASOURCE=$(echo "${MM_SQLSETTINGS_DRIVERNAME//\"}://${DB_USERNAME//\"}:${DB_PASSWORD//\"}@${DB_HOST//\"}:${DB_PORT//\"}/${DB_PATH//\"}?sslmode=disable&connect_timeout=10")


export MM_ELASTICSEARCHSETTINGS_CONNECTIONURL="http://search.internal:9200"
export MM_ELASTICSEARCHSETTINGS_USERNAME=""
export MM_ELASTICSEARCHSETTINGS_PASSWORD=""

export MM_LOGSETTINGS_ENABLEFILE=false
export MM_LOGSETTINGS_FILELOCATION="./logs/"
export MM_NOTIFICATIONLOGSETTINGS_ENABLEFILE=false
export MM_NOTIFICATIONLOGSETTINGS_FILELOCATION="./logs/"
